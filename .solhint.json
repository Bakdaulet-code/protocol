{
  "extends": "solhint:all",
  "rules": {
    "avoid-throw": "off",
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "compiler-version": [
      "error",
      "0.8.0"
    ],
    "comprehensive-interface": "off",
    "max-line-length": "off",
    "ordering": "off",
    "func-visibility": [
      "error",
      {
        "ignoreConstructors": true
      }
    ],
    "reason-string": "error",
    "quotes": [
      "error",
      "double"
    ],
    "private-vars-leading-underscore": "error"
  }
}