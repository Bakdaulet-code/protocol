{
  "extends": "solhint:all",
  "rules": {
    "avoid-throw": "off",
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "compiler-version": "0.8.0",
    "comprehensive-interface": "off",
    "max-line-length": "off",
    "ordering": "off",
    "func-visibility": [
      "error",
      {
        "ignoreConstructors": true
      }
    ]
  }
}