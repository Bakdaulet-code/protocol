{
  "name": "protocol",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "compile:clean": "rm -rf ./artifacts && hardhat compile",
    "solhint": "solhint \"contracts/**/*.sol\"",
    "gendoc": "rm -rf build && rm -rf docs && truffle compile && solidoc2",
    "slither": "slither .",
    "test": "npx hardhat test",
    "test:all": "npx hardhat test ./**/*.{spec,story}.js",
    "stories": "npx hardhat test ./**/*.story.js",
    "mumbai": "mkdir -p ./.todo/deployments/mumbai && npx hardhat run --network mumbai scripts/deploy.js > \"./.todo/deployments/mumbai/$(date +%Y%m%d-%H%M%S).txt\"",
    "bsc:testnet": "mkdir -p ./.todo/deployments/bsct && npx hardhat run --network bsct scripts/deploy.js > \"./.todo/deployments/bsct/$(date +%Y%m%d-%H%M%S).txt\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neptune-mutual/protocol.git"
  },
  "standard": {
    "env": [
      "mocha"
    ],
    "global": [
      "ethers",
      "task",
      "contract",
      "artifacts",
      "web3"
    ]
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/neptune-mutual/protocol/issues"
  },
  "homepage": "https://github.com/neptune-mutual/protocol#readme",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.3",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "bignumber.js": "^9.0.1",
    "bs58": "^4.0.1",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "chai-bignumber": "^3.0.0",
    "dotenv": "^10.0.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.4.0",
    "hardhat": "^2.3.3",
    "hardhat-contract-sizer": "^2.0.3",
    "hardhat-gas-reporter": "^1.0.4",
    "ipfs-mini": "^1.1.5",
    "openzeppelin-solidity": "^4.1.0",
    "prettier": "^2.3.1",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.16",
    "solidoc2": "^1.0.7",
    "standard": "^16.0.3"
  }
